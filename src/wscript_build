#!/usr/bin/env python

gemini = bld.new_task_gen ('cc', 'program')
gemini.sources = 'window.vala'
gemini.uselib='GLIB-2.0 VTE GEE-1.0 GTHREAD GTK+-2.0 GDK-PIXBUF-2.0'
gemini.packages = 'vte gee-1.0 gdk-pixbuf-2.0 config'
gemini.vapi_dirs = '.'
gemini.target='gemini'
gemini.uselib_local = 'libgemini'
gemini.threading = True

geminilight = bld.new_task_gen ('cc', 'program')
geminilight.sources = 'light.vala'
geminilight.uselib='GLIB-2.0 VTE GEE-1.0 GTHREAD GTK+-2.0 GDK-PIXBUF-2.0'
geminilight.packages = 'vte gee-1.0 gdk-pixbuf-2.0 config'
geminilight.vapi_dirs = '.'
geminilight.target='gemini-light'
geminilight.uselib_local = 'libgemini'
geminilight.threading = True
